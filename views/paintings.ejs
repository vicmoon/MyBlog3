<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    <link rel="icon" href="/images/victoria_m.jpg" type="image/x-icon" />
    <title>My Gallery ðŸŽ¨</title>
    <link rel="stylesheet" href="/css/paintings.css" />
  </head>
  <body>
    <a href="/" class="back-button"><span>Back</span></a>
    <div class="carousel">
      <% paintings.forEach(function(painting) { %>
      <div class="carousel-item">
        <img src="<%= painting.paintingImage %>" alt="<%= painting.title %>" />
      </div>
      <% }); %>
    </div>
    <a href="/" class="back-button"><span>Back</span></a>

    <script>
      document.querySelectorAll('.carousel-item img').forEach(function (img) {
        img.addEventListener('click', function () {
          // Create an overlay div to hold the full-size image
          const overlay = document.createElement('div');
          overlay.style.position = 'fixed';
          overlay.style.top = 0;
          overlay.style.left = 0;
          overlay.style.width = '100%';
          overlay.style.height = '100%';
          overlay.style.backgroundColor = 'rgba(0, 0, 0, 0.8)';
          overlay.style.display = 'flex';
          overlay.style.alignItems = 'center';
          overlay.style.justifyContent = 'center';
          overlay.style.cursor = 'pointer';

          // Create an image element for the full-size image
          const fullImg = document.createElement('img');
          fullImg.src = img.src;
          fullImg.style.maxWidth = '100%';
          fullImg.style.maxHeight = '100%';

          // Append full-size image to overlay
          overlay.appendChild(fullImg);

          // Add event listener to close overlay when clicked
          overlay.addEventListener('click', function () {
            document.body.removeChild(overlay);
          });

          // Append overlay to the body
          document.body.appendChild(overlay);
        });
      });
    </script>
  </body>
</html>
